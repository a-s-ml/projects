{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2020",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@api/category": ["libs/api/src/category.api.ts"],
      "@api/global": ["libs/api/src/global.api.ts"],
      "@api/group": ["libs/api/src/group.api.ts"],
      "@api/group/active": ["libs/api/src/activeGroup.api.ts"],
      "@api/period": ["libs/api/src/period.api.ts"],
      "@api/question": ["libs/api/src/question.api.ts"],
      "@api/type": ["libs/api/src/type.api.ts"],
      "@api/vik": ["libs/api/src/vik.api.ts"],
      "@components": ["components/src/index.ts"],
      "@const": ["libs/const/index.ts"],
      "@models": ["models/index.ts"],
      "@store/add-question": ["apps/add-question/src/app/store/index.ts"],
      "@store/groups": ["apps/groups/src/app/store/index.ts"],
      "@store/main": ["apps/main/src/app/store/index.ts"],
      "@store/questions": ["apps/questions/src/app/store/index.ts"],
      "@utils": ["libs/utils/index.ts"],
      "add-question/Module": ["apps/add-question/src/remote-entry.ts"],
      "answers/Module": ["apps/answers/src/remote-entry.ts"],
      "groups/Module": ["apps/groups/src/remote-entry.ts"],
      "questions/Module": ["apps/questions/src/remote-entry.ts"],
      "quiz/Module": ["apps/quiz/src/remote-entry.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
