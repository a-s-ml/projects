{
	"compileOnSave": false,
	"compilerOptions": {
		"rootDir": ".",
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"target": "es2015",
		"module": "esnext",
		"lib": ["es2020", "dom"],
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@vik/shared/models": ["shared/models/src/index.ts"],
			"answers/Module": ["answers/src/remote-entry.ts"],
			"ffr/Module": ["ffr/src/remote-entry.ts"],
			"groups/Module": ["groups/src/remote-entry.ts"],
			"questions/Module": ["questions/src/remote-entry.ts"],
			"viktorins/Module": ["viktorins/src/remote-entry.ts"]
		}
	},
	"exclude": ["node_modules", "tmp"]
}
